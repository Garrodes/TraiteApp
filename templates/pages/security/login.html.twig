{% extends 'base.html.twig' %}

{% block title %}TraiteApp | Connexion{% endblock %}

{% block body %}
<div class="container">

  {% for message in app.flashes('success') %}
     <div class="alert-success mt-4">
            {{ message }}
    </div>
  {% endfor %}
  
    <h1 class="mt-4"> Formulaire de connexion</h1>

    {% if error %}
    <div class="alert alert-danger mt-4">
        {{ error.messageKey|trans(error.messageData, 'security') }}
      </div>

    {% endif %}

    <form action="{{path('security.login')}}" method="post">
        <div class="form-group">
            <label for="username" class="form-label mt-4">Adresse Email</label>
            <input type="email" class="form-control" id="username" placeholder="exemple@traiteapp.com" 
            value="{{ last_username}} "name="_username">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
          </div>
          <div class="form-group">
            <label for="password" class="form-label mt-4">Mot de Passe</label>
            <input type="password" class="form-control" id="password"  name="_password" placeholder="********">
          </div>
          <button class="btn btn-primary mt-4" type="submit"> Se Connecter </button>
         <h6 class="mt-4">Pas inscrit ? <a href="{{path('security.registration')}}">  Inscrivez vous </a></h6> 

    </form>

</div>

{% endblock %}
