{% extends "base.html.twig" %}


{% block title %}  TraiteApp | Nouveau Bovin {% endblock %}
{% block body %}

    <div class="container mt-4">
        <h1>Ajouter un Bovin</h1>
    

        {{ form_start(form)}}
        <div class="form-group">    
                {{ form_label(form.name)}}
                {{ form_widget(form.name)}}
            <div class="form-error">
                {{form_errors(form.name)}}
            </div>          
          </div>
          <div class="form-group">
            {{ form_label(form.idNat)}}
            {{ form_widget(form.idNat)}}
            <div class="form-error">
                {{form_errors(form.idNat)}}
            </div>
      </div>
 
          <div class="form-group">
            {{ form_label(form.dob)}}
            {{ form_widget(form.dob)}}
            <div class="form-error">
                {{form_errors(form.dob)}}
            </div>
            <div class="form-group">
                {{ form_label(form.breed)}}
                {{ form_widget(form.breed)}}
                <div class="form-error">
                    {{form_errors(form.breed)}}
                </div>
          </div>
          <div class="form-group">
            {{ form_label(form.ref_herd)}}
            {{ form_widget(form.ref_herd)}}
            <div class="form-error">
                {{form_errors(form.ref_herd)}}
            </div>
      </div>

  <div class="form-group">
    {{ form_label(form.healths)}}
    {{ form_widget(form.healths)}}
    <div class="form-error">
        {{form_errors(form.healths)}}
    </div>
    <div class="form-group">
        {{ form_label(form.isPublic)}}
        {{ form_widget(form.isPublic)}}
        <div class="form-error">
            {{form_errors(form.isPublic)}}
        </div>
  </div>
      
          <div class="form-group">
            {{ form_row(form.submit) }}
          </div>
            
        {{ form_end(form)}}
        </div>
        
        </div>

{% endblock %}